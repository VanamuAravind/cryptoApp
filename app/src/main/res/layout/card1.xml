<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingEnd="50dp"
        android:background="@drawable/card1_background"
        android:id="@+id/card1"
        android:layout_marginTop="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="7dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/currencyImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bitcoin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bitcoin"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/currencyImage"
            app:layout_constraintTop_toBottomOf="@+id/currencyImage" />

        <TextView
            android:id="@+id/currenctCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:textColor="@color/light_gray"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/currencyName"
            app:layout_constraintTop_toBottomOf="@+id/currencyName" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="$37,760.00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/currenctCode"
            app:layout_constraintTop_toBottomOf="@+id/currenctCode" />

    </androidx.constraintlayout.widget.ConstraintLayout>
